# Phase 1 & 2 Configuration
# Copy this to .env and update with your values

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=realestate
DB_USER=postgres
DB_PASSWORD=your_password_here

# Qdrant Vector DB (optional - will use FAISS if not available)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Phase 2: LLM & APIs

# HuggingFace API (required for chatbot)
HF_TOKEN=your_huggingface_token_here

# Redis for short-term memory (optional - will fallback to dict if not available)
REDIS_HOST=localhost
REDIS_PORT=6379

# Tavily API for web research (optional)
TAVILY_API_KEY=your_tavily_key_here

# Phase 3: API & UI Configuration

# FastAPI Backend
API_HOST=localhost
API_PORT=8000

# Streamlit Frontend
STREAMLIT_PORT=8501
